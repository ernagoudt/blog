html
  head
    title Post message
    style
      include style.css
  body
    include nav.pug
    br
    br
    br
    br
    br
    br

    if (user)
      div(class="transbox")
        h3 Hi #{user.username}, would you like to post a message?
        form(method="POST" action="/post-message")
          input(type="text" name="title" placeholder="Title")
          input(type="textarea" name="message" placeholder="Leave your message")
          input(type="submit" value="Post message")
    else
     h1 Please login first!
