nav
  ul
    li
      a(href='/') Home
    li
      a(href='/all-messages') All messages
    if (user)
      li
        a(href='/post-message') Post message
      li
        a(href='/my-messages') My messages
      li.loggedIn
        a(href='/logout') Log out, #{user.username}
    else
      li.loggedIn
        a(href='/login') Log in

style.
  nav {
    background-color: #990000;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
  }

  nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  nav ul li {
    float: left;
  }

  nav ul li a {
    display: block;
    padding: 20px 30px;
    background-color: #990000;
    text-decoration: none;
    color: white;
    text-align: center;
  }

  nav ul li a:hover {
    background-color: #660000;
  }

  nav ul li.loggedIn {
    float: right;
  }

  nav ul li.loggedIn a {
    display: inline-block;
    padding: 20px 30px;
    background-color: #990000;
    text-decoration: none;
    color: white;
    text-align: center;
  }

  nav ul li.loggedIn a:hover {
    background-color: #660000;
  }

